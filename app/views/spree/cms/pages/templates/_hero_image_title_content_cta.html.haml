- components_page.assets.each do |asset|
  .p-0.w-100{ class: "image_hero_#{asset.id}" }
  = render partial: 'spree/cms/pages/templates/shared/hero_image_css',
      locals: { asset: asset,
          class_name: "image_hero_#{asset.id}",
          height: components_page.parent.height }
  .carousel-caption.d-flex.h-100{ class: components_page.presenter.content_alignment_classes }
    %div
      %h2{ class: components_page.presenter.title_classes } = components_page.title
      %p{ class: components_page.presenter.content_classes }= components_page.content
      - if components_page.metadata.cta.present? && components_page.metadata.cta_url.present?
        = link_to components_page.metadata.cta, components_page.metadata.cta_url,
            class: "btn #{components_page.metadata.button_color}"
