.card.border-0.h-100.bg-transparent.flex-grow-1
  - if components_page.assets.present?
    .card-img-top.d-flex.justify-content-center
      = image_tag components_page.assets.first.attachment.url(:square), class: 'img-fluid'
  .card-body
    %h4.text-center{ class: components_page.presenter.title_classes }
      = components_page.metadata.title
    %p{ class: components_page.presenter.content_classes }
      = components_page.metadata.content
    - if components_page.metadata.cta.present?
      = link_to components_page.cta, components_page.cta_url,
          class: "btn #{components_page.button_color}"
  .card-footer.bg-transparent.border-0
