.row
  .col
    = f.text_field :name, placeholder: t('custom_pages.new'), required: true,
        help: t('custom_pages.pages.help.name')
.row
  .col-6
    = f.text_field :path, placeholder: '/', required: true, help: t('custom_pages.pages.help.path')
  = f.fields_for :metadata, f.object.metadata do |metadata_f|
    .col-6
      = metadata_f.text_field :background_color,
          help: t('custom_pages.background_color_help'),
          class: ' a'
    .col-12
      = metadata_f.text_area :meta_description, help: 'SEO Meta Description'
    .col-12
      = metadata_f.text_area :meta_keywords, help: 'SEO Meta Keywords'
= f.submit
